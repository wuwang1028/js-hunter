{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020", "DOM"],
    "outDir": "./extension",
    "rootDir": "./extension",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "types": ["chrome"]
  },
  "include": ["extension/**/*.ts"],
  "exclude": ["node_modules", "extension/**/*.js", "client", "server", "shared"]
}
